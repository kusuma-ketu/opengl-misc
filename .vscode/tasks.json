{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang-20 build active file",
            "command": "/opt/homebrew/Cellar/llvm/20.1.7/bin/clang-20",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                "-I/opt/homebrew/Cellar/glew/2.2.0_1/include",
                "-I/opt/homebrew/Cellar/glfw/3.4/include",

                // Library paths
                "-L/opt/homebrew/Cellar/glfw/3.4/lib",
                "-L/opt/homebrew/Cellar/glew/2.2.0_1/lib",

                // Link against libraries
                "-lglew",
                "-lglfw",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}

